<Window x:Class="iTombola.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iTombola"
        mc:Ignorable="d"
        Title="Tombola" Height="800" Width="800" Icon="/iTombola.ico">
    <StackPanel>
        <Image  x:Name="FrameImage" VerticalAlignment="Center" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <ComboBox x:Name="cmbLanguage" Margin="0,20,20,20" FontSize="16" VerticalAlignment="Center" DisplayMemberPath="DisplayName">
            </ComboBox>
            <Button x:Name="btnScatta" Content="Scatta!" HorizontalAlignment="Center" Margin="20,20,0,20 " Height="37" VerticalAlignment="Center" Width="208" Click="btnScatta_Click" BorderBrush="#FFAF2525" Foreground="#FFE23131" FontWeight="Bold" FontSize="16" IsEnabled="True" IsDefault="True"/>
        </StackPanel>
        <TextBlock x:Name="txtStatus" HorizontalAlignment="Center" FontSize="26" Margin="0,20,0,0" FontStyle="Italic"><Run Text="Status Textbox"/></TextBlock>
    </StackPanel>
</Window>
